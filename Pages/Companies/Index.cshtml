@page "{id:int?}"
@model RentACar.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CompanyNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CompanyEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CompanyData.Companies)
        {
            string selectedRow = "";
            if (item.ID == Model.CompanyID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <!-- Restul codului pentru randul tabelului -->
            
        
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyEmail)
            </td>
            <td>

                <a asp-page="./Index" asp-route-id="@item.ID">Select</a>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
@if (Model.CompanyData.Cars != null)
{
    <h3>Cars Owned by Selected Company</h3>
    <table class="table">

        @foreach (var item in Model.CompanyData.Companies)
        {
            string selectedRow = "";
            if (item.ID == Model.CompanyID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">

                <td>
                    @{
                        foreach (var b in item.Cars)
                        {

                            @b.CarName

                            <br />
                        }
                    }
                </td>
            </tr>
        }
    </table>
}
